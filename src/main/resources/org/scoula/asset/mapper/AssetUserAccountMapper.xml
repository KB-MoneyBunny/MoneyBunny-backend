<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="org.scoula.asset.mapper.AssetUserAccountMapper">

    <resultMap id="AccountSummaryMap" type="org.scoula.asset.domain.AccountSummaryVO">
        <id     property="id"    column="id"/>
        <result property="bankCode"     column="bank_code"/>
        <result property="accountName"  column="account_name"/>
        <result property="accountNumber" column="account_number"
                typeHandler="org.scoula.codef.util.AesEncryptTypeHandler"/>
        <result property="accountType"  column="account_type"/>
        <result property="balance"      column="balance"/>
    </resultMap>

    <select id="findUserIdByLoginId" resultType="long">
        SELECT user_id FROM users WHERE login_id = #{loginId}
    </select>

    <select id="findAccountSummariesByUserId" resultMap="AccountSummaryMap">
        SELECT id, bank_code, account_name, account_number, account_type, balance
        FROM user_account
        WHERE user_id = #{userId}
    </select>

    <select id="isAccountOwner" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM user_account
        WHERE user_id = #{userId}
          AND id = #{accountId}
    </select>

</mapper>

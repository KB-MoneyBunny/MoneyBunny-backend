<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.scoula.external.gpt.mapper.PromptConditionMapper">

    <!-- 모든 조건 조회 -->
    <select id="findAllConditions" resultType="org.scoula.external.gpt.domain.PromptConditionVO">
        SELECT id, condition_text, type, created_at
        FROM prompt_condition
        ORDER BY type ASC, id ASC
    </select>

    <!-- 타입별 조건 조회 -->
    <select id="findConditionsByType" resultType="org.scoula.external.gpt.domain.PromptConditionVO">
        SELECT id, condition_text, type, created_at
        FROM prompt_condition
        WHERE type = #{type}
        ORDER BY id ASC
    </select>

    <!-- 조건 추가 -->
    <insert id="insertCondition" parameterType="org.scoula.external.gpt.domain.PromptConditionVO"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO prompt_condition (condition_text, type)
        VALUES (#{conditionText}, #{type})
    </insert>

    <!-- 조건 업데이트 -->
    <update id="updateCondition" parameterType="org.scoula.external.gpt.domain.PromptConditionVO">
        UPDATE prompt_condition
        SET condition_text = #{conditionText},
            type = #{type}
        WHERE id = #{id}
    </update>

    <!-- 조건 삭제 -->
    <delete id="deleteCondition">
        DELETE FROM prompt_condition
        WHERE id = #{id}
    </delete>

    <!-- ========== 계산 규칙 관련 쿼리 ========== -->
    
    <!-- 모든 계산 규칙 조회 -->
    <select id="findAllCalculationRules" resultType="org.scoula.external.gpt.domain.PromptCalculationRuleVO">
        SELECT id, rule_text, created_at
        FROM prompt_calculation_rule
        ORDER BY id ASC
    </select>

    <!-- 계산 규칙 추가 -->
    <insert id="insertCalculationRule" parameterType="org.scoula.external.gpt.domain.PromptCalculationRuleVO"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO prompt_calculation_rule (rule_text)
        VALUES (#{ruleText})
    </insert>

    <!-- 계산 규칙 업데이트 -->
    <update id="updateCalculationRule" parameterType="org.scoula.external.gpt.domain.PromptCalculationRuleVO">
        UPDATE prompt_calculation_rule
        SET rule_text = #{ruleText}
        WHERE id = #{id}
    </update>

    <!-- 계산 규칙 삭제 -->
    <delete id="deleteCalculationRule">
        DELETE FROM prompt_calculation_rule
        WHERE id = #{id}
    </delete>
    
    <!-- ========== 예시 관련 쿼리 ========== -->
    
    <!-- 모든 예시 조회 -->
    <select id="findAllExamples" resultType="org.scoula.external.gpt.domain.PromptExampleVO">
        SELECT id, example_text, type, created_at
        FROM prompt_example
        ORDER BY type ASC, id ASC
    </select>

    <!-- 타입별 예시 조회 -->
    <select id="findExamplesByType" resultType="org.scoula.external.gpt.domain.PromptExampleVO">
        SELECT id, example_text, type, created_at
        FROM prompt_example
        WHERE type = #{type}
        ORDER BY id ASC
    </select>

    <!-- 예시 추가 -->
    <insert id="insertExample" parameterType="org.scoula.external.gpt.domain.PromptExampleVO"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO prompt_example (example_text, type)
        VALUES (#{exampleText}, #{type})
    </insert>

    <!-- 예시 업데이트 -->
    <update id="updateExample" parameterType="org.scoula.external.gpt.domain.PromptExampleVO">
        UPDATE prompt_example
        SET example_text = #{exampleText},
            type = #{type}
        WHERE id = #{id}
    </update>

    <!-- 예시 삭제 -->
    <delete id="deleteExample">
        DELETE FROM prompt_example
        WHERE id = #{id}
    </delete>

</mapper>